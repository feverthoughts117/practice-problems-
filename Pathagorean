void pythagorean(int a, int b, int c);
int main() {
  int n1,n2,n3;
  string name;
  cout << "Hello World!\n";

  cout << "What's your name? " << endl << "Please enter your name: ";

  cin >> name;

  cout << "\n Enter length, width, and height of the triangle:  ";
  cin >> n1 >> n2 >> n3;

  pythagorean(n1, n2, n3);
}

void pythagorean(int a, int b, int c)
{
  if (a == 0)
  {
    a = sqrt(pow(c,2) - pow(b,2));
    cout << "a is " << a << endl;
  }
  else if(b == 0)
  {
    b = sqrt(pow(c,2) - pow(a,2));
    cout << "b is " << b << endl;
  }
  else 
  {
    c = sqrt(pow(a,2) + pow(b,2));

    cout << "c is " << c << endl;
  }
}
